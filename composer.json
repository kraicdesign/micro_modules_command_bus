{
    "name": "ddd-module/command-bus",
    "type": "library",
    "description": "Micro module CommandBus common library",
    "license": ["proprietary"],
    "require": {
        "php": "^8.0",
        "league/tactician-bundle": "^1.5",
        "league/tactician-command-events": "^0.6.0"
    },
    "require-dev": {
        "mockery/mockery": "^1.6",
        "php-parallel-lint/php-console-highlighter": "^v1.0",
        "php-parallel-lint/php-parallel-lint": "^1.3",
        "phpmd/phpmd": "^2.15",
        "phpstan/phpstan": "^1.10",
        "phpstan/phpstan-mockery": "^1.1",
        "phpstan/phpstan-phpunit": "^1.3",
        "phpunit/phpunit": "^10.0",
        "roave/security-advisories": "dev-master",
        "symplify/easy-coding-standard": "^12.1",
        "vimeo/psalm": "^5.22"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "DddModule\\CommandBus\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DddModule\\CommandBus\\Tests\\Unit\\": "tests/unit"
        }
    }
}
